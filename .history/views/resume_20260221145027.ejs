/* HOBBY */
function addHobby(){
    const div=document.createElement("div")
    div.innerHTML=`<input placeholder="Hobby">
    <button onclick="this.parentElement.remove(); updateHobby()">X</button>`
    div.querySelector("input").oninput=updateHobby
    hobbyBox.appendChild(div)
}

function updateHobby(){
    previewHobby.innerHTML=""
    hobbyBox.querySelectorAll("input").forEach(i=>{
        if(i.value) previewHobby.innerHTML+=`<li>${i.value}</li>`
    })
    hobbySection.style.display = previewHobby.innerHTML ? "block":"none"
}

/* LANGUAGE */
function addLang(){
    const div=document.createElement("div")
    div.innerHTML=`<input placeholder="Language">
    <button onclick="this.parentElement.remove(); updateLang()">X</button>`
    div.querySelector("input").oninput=updateLang
    langBox.appendChild(div)
}

function updateLang(){
    previewLang.innerHTML=""
    langBox.querySelectorAll("input").forEach(i=>{
        if(i.value) previewLang.innerHTML+=`<li>${i.value}</li>`
    })
    langSection.style.display = previewLang.innerHTML ? "block":"none"
}

</script>
</body>
</html>