    const div=document.createElement("div")
    div.innerHTML=`<input placeholder="Certificate">
    <button onclick="this.parentElement.remove(); updateCert()">X</button>`
    div.querySelector("input").oninput=updateCert
    certBox.appendChild(div)
}

function updateCert(){
    previewCert.innerHTML=""
    certBox.querySelectorAll("input").forEach(i=>{
        if(i.value) previewCert.innerHTML+=`<p>${i.value}</p>`
    })
    certSection.style.display = previewCert.innerHTML ? "block":"none"
