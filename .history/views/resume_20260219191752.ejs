<!DOCTYPE html>
<html>
<head>
<title>Resume Builder</title>

<style>
body {
    font-family: "Times New Roman", serif;
    background: #eaeaea;
    display: flex;
    justify-content: center;
    padding: 30px;
    gap: 40px;
}

.container {
    width: 45%;
    background: white;
    padding: 25px;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(0,0,0,0.08);
}

input, textarea {
    width: 100%;
    padding: 6px;
    margin-top: 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-family: inherit;
    font-size: 14px;
}

button {
    margin-top: 5px;
    padding: 5px 10px;
    background: black;
    color: white;
    border: none;
    cursor: pointer;
}

button:hover { opacity: 0.8; }

.preview {
    width: 45%;
    background: white;
    padding: 40px;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    font-size: 14px;
    line-height: 1.5;
    position: relative;
}

.preview img {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    position: absolute;
    right: 60px;
    top: 40px;
    object-fit: cover;
}

.preview h1 {
    text-align: center;
    font-size: 26px;
    margin-bottom: 5px;
}

.contact { text-align: center; margin-bottom: 20px; }

.section-title {
    font-weight: bold;
    margin-top: 20px;
    border-bottom: 1px solid black;
    padding-bottom: 3px;
}

.entry {
    margin-top: 8px;
    display: flex;
    justify-content: space-between;
}

.entry-left { width: 70%; }
.entry-right { width: 30%; text-align: right; }

ul { margin-top: 5px; padding-left: 20px; }
</style>
</head>

<body>

<div class="container">
<h1>Create Resume</h1>

<h2>Upload Photo</h2>
<input type="file" id="photoInput" accept="image/*">

<h2>Personal Info</h2>
<input type="text" id="fullName" placeholder="Full Name">
<input type="email" id="email" placeholder="Email">
<input type="text" id="phone" placeholder="Phone">
<input type="text" id="address" placeholder="Address">
<input type="text" id="github" placeholder="GitHub">

<h2>Education <button type="button" onclick="addEducation()">+</button></h2>
<div id="educationBox"></div>

<h2>Skills <button type="button" onclick="addSkill()">+</button></h2>
<div id="skillBox"></div>

<h2>Projects <button type="button" onclick="addProject()">+</button></h2>
<div id="projectBox"></div>

<h2>Experience <button type="button" onclick="addExperience()">+</button></h2>
<div id="experienceBox"></div>

</div>


<div class="preview">

<img id="photoPreview">

<h1 id="previewFullName">Your Name</h1>

<div class="contact">
<span id="previewAddress"></span> |
<span id="previewPhone"></span> |
<span id="previewEmail"></span> |
<span id="previewGithub"></span>
</div>

<div class="section-title">Education</div>
<div id="previewEducation"></div>

<div class="section-title">Technical Skills</div>
<ul id="previewSkills"></ul>

<div class="section-title">Projects</div>
<div id="previewProjects"></div>

<div class="section-title">Experience</div>
<div id="previewExperience"></div>

</div>


<script>

/* PERSONAL INFO */
function linkInput(id, preview){
document.getElementById(id).addEventListener("input", e=>{
document.getElementById(preview).innerText = e.target.value;
});
}

linkInput("fullName","previewFullName");
linkInput("email","previewEmail");
linkInput("phone","previewPhone");
linkInput("address","previewAddress");
linkInput("github","previewGithub");

/* PHOTO */
photoInput.addEventListener("change", function(e){
const file = e.target.files[0];
if(file){
photoPreview.src = URL.createObjectURL(file);
}
});

/* EDUCATION */
function addEducation(){
educationBox.innerHTML += `
<div>
<input type="text" placeholder="Degree">
<input type="text" placeholder="College">
<input type="text" placeholder="Year">
<button type="button" onclick="this.parentElement.remove(); renderEducation()">X</button>
</div>`;
renderEducation();
educationBox.querySelectorAll("input").forEach(i=>i.oninput=renderEducation);
}

function renderEducation(){
previewEducation.innerHTML="";
educationBox.querySelectorAll("div").forEach(block=>{
let inputs = block.querySelectorAll("input");
if(inputs[0].value){
previewEducation.innerHTML+=`
<div class="entry">
<div class="entry-left">
<strong>${inputs[0].value}</strong><br>${inputs[1].value}
</div>
<div class="entry-right">${inputs[2].value}</div>
</div>`;
}
});
}

/* SKILLS */
function addSkill(){
skillBox.innerHTML+=`
<div>
<input type="text" placeholder="Skill">
<button type="button" onclick="this.parentElement.remove(); renderSkill()">X</button>
</div>`;
renderSkill();
skillBox.querySelectorAll("input").forEach(i=>i.oninput=renderSkill);
}

function renderSkill(){
previewSkills.innerHTML="";
skillBox.querySelectorAll("input").forEach(i=>{
if(i.value) previewSkills.innerHTML+=`<li>${i.value}</li>`;
});
}

/* PROJECT */
function addProject(){
projectBox.innerHTML+=`
<div>
<input type="text" placeholder="Project Title">
<textarea placeholder="Description"></textarea>
<button type="button" onclick="this.parentElement.remove(); renderProject()">X</button>
</div>`;
renderProject();
projectBox.querySelectorAll("input,textarea").forEach(i=>i.oninput=renderProject);
}

function renderProject(){
previewProjects.innerHTML="";
projectBox.querySelectorAll("div").forEach(block=>{
let title=block.querySelector("input").value;
let desc=block.querySelector("textarea").value;
if(title){
previewProjects.innerHTML+=`
<strong>${title}</strong>
<ul><li>${desc}</li></ul>`;
}
});
}

/* EXPERIENCE */
function addExperience(){
experienceBox.innerHTML+=`
<div>
<input type="text" placeholder="Company">
<input type="text" placeholder="Position">
<input type="text" placeholder="Duration">
<textarea placeholder="Description"></textarea>
<button type="button" onclick="this.parentElement.remove(); renderExperience()">X</button>
</div>`;
renderExperience();
experienceBox.querySelectorAll("input,textarea").forEach(i=>i.oninput=renderExperience);
}

function renderExperience(){
previewExperience.innerHTML="";
experienceBox.querySelectorAll("div").forEach(block=>{
let inputs=block.querySelectorAll("input");
let desc=block.querySelector("textarea").value;
if(inputs[0].value){
previewExperience.innerHTML+=`
<div class="entry">
<div class="entry-left">
<strong>${inputs[0].value}</strong><br>${inputs[1].value}
</div>
<div class="entry-right">${inputs[2].value}</div>
</div>
<ul><li>${desc}</li></ul>`;
}
});
}

</script>

</body>
</html>
